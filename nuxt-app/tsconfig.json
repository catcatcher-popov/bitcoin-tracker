{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "#/*": ["./*"],
      "types": ["types"],
      "types/*": ["types/*"]
    },
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": [
    "nuxt.config.ts",
    "server/**/*",
    "prisma/**/*",
    "components/**/*",
    "composables/**/*",
    "pages/**/*",
    "services/price-api.service.ts"
  ]
}
